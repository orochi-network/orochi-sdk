{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./build/",
    "sourceMap": true,
    "rootDir": "."
  },
  "include": ["**/*.ts"],
  "exclude": ["build", "node_modules", "**/*.spec.ts", "**/*.test.ts", "src/types/**/*.ts"]
}
